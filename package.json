  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/chrome": "^0.0.101",
    "@types/jest": "^25.1.4",
    "@types/webpack": "^4.41.8",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "cpx": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "webextension-polyfill-ts": "^0.13.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/*.{config,d}.ts",
      "!**/node_modules/**"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(spec))\\.(ts)$"
  }
}
